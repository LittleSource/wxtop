/* pages/leave/message/message.wxss */
.approval {
  height: calc(100vh - 44rpx );
  background-color: #ecedf1;
}

.approvaledTime {
  padding: 15px 0;
  text-align: center;
  font-size: 13px;
  color: #b3b4b3;
}

.context {
  margin: 0 10px;
  padding: 10px;
  background-color: #fff;
  border-radius: 3px;
}

.con-title {
  margin: 8px 0;
  font-weight: 700;
  font-size: 35rpx;
}
.con-detail {
  font-size: 14px;
}

/* 底部 */
.allAgreed {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FFFFFF;
  font-size: 30rpx;
}

