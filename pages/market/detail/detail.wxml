<!--pages/market/detail/detail.wxml-->
<!--顶部状态条-->
<view class='custom-bar' style='height:{{CustomBar}}px;'>
    <text class='text-white text-xl' style='line-height:{{CustomBar + StatusBar}}px;'>瓦罗兰大陆</text>
    <view class="canui-head-box" style="top:{{StatusBar+5}}px;">
        <view class='cuIcon-back' bindtap='goBack'></view>
        <view class='cuIcon-home' bindtap='goHome'></view>
    </view>
</view>
<!--超市信息卡片-->
<view class='market-card'>
    <view class="cu-list menu-avatar">
        <view class="cu-item">
            <view class="cu-avatar radius xl" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big81020.jpg);"></view>
            <view class="content">
                <view>
                    <text class="text-cut">瓦罗兰大陆</text>
                </view>
                <view class="text-df flex">
                    <text class="iconfont icon-shequgonggao text-orange"></text>
                    <text class='toptext-margin'>伊泽瑞尔：</text>
                </view>
                <view class="text-df flex">
                    <text class="cuIcon-locationfill text-blue"></text>
                    <text class='toptext-margin'>电子 4号楼</text>
                </view>
            </view>
        </view>
    </view>
</view>
<!--滚动商品选择-->
<view class="VerticalBox">
    <scroll-view class="VerticalNav nav" scroll-y scroll-with-animation scroll-top="{{VerticalNavTop}}" style="height:{{scrollHeight}}px">
        <view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{mainCate}}" wx:key wx:for-item="cateItem" data-id="{{index}}" bindtap='tabSelect'>
            {{cateItem.title}}
        </view>
    </scroll-view>
    <scroll-view class="VerticalMain" scroll-y scroll-with-animation style="height:{{scrollHeight}}px" scroll-into-view="main-{{MainCur}}" bindscroll="VerticalMain">
        <view class="padding-lr margin-bottom" wx:for="{{mainCate}}" wx:key id="main-{{index}}" wx:for-item="cateItem">
            <view class='cu-bar solid-bottom bg-white'>
                <view class='action'>
                    <text class='cuIcon-title text-green'></text> {{cateItem.title}} </view>
            </view>
            <view class="cu-list menu-avatar">
                <view class="cu-item" wx:for="{{allProduct['cateproducts'+(index+1)]}}" wx:key="{{productIndex}}" wx:for-item="product">
                    <view class="cu-avatar radius lg" style="background-image:url({{product.img}});"></view>
                    <view class="content">
                        <view class="text-grey">{{product.title}}</view>
                        <view class="text-gray text-sm flex">
                            <text class="text-cut">
								<text class="text-price text-red text-lg">{{product.price}}</text>
                            </text>
                        </view>
                    </view>
                    <view class="action" bindtap='addBtn'>
                        <view class="iconfont icon-minus-circle"></view>
                    </view>
                    <view class="action">
                        5
                    </view>
                    <view class="action" bindtap='addBtn'>
                        <view class="iconfont icon-plus-circle"></view>
                    </view>
                </view>
            </view>
        </view>
    </scroll-view>
</view>
<!--底部功能菜单-->
<view class="cu-bar bg-white tabbar border shop">
    <view class="action">
        <view class="cuIcon-notice text-grey"></view>投诉
    </view>
    <view class="action">
        <view class="cuIcon-cart text-orange">
            <view wx:if="{{goodCount > 0}}" class="cu-tag badge">{{goodCount}}</view>
        </view>
        购物车
    </view>
    <view class="action">
        <view class="text-orange text-xl">18.88</view>
    </view>
    <view class="bg-red submit">立即付款</view>
</view>